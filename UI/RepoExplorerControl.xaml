<UserControl x:Class="repotxt.UI.RepoExplorerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="clr-namespace:repotxt.UI"
             MinWidth="300" MinHeight="200"
             Background="{DynamicResource Brush.PanelBg}"
             Foreground="{DynamicResource Brush.Text}">
    <UserControl.Resources>
        <SolidColorBrush x:Key="Brush.PanelBg" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="Brush.NavBarBg" Color="#151515"/>
        <SolidColorBrush x:Key="Brush.Text" Color="#D0D0D0"/>
        <SolidColorBrush x:Key="Brush.Border" Color="#2D2D30"/>
        <SolidColorBrush x:Key="Brush.ButtonBg" Color="#2D2D30"/>
        <SolidColorBrush x:Key="Brush.ButtonBg.Hover" Color="#3E3E42"/>
        <SolidColorBrush x:Key="Brush.ButtonBg.Pressed" Color="#4A4A4A"/>
        <SolidColorBrush x:Key="Brush.ItemSelected" Color="#2A2D2E"/>
        <SolidColorBrush x:Key="Brush.ItemHover" Color="#2F3235"/>
        <SolidColorBrush x:Key="Brush.ExcludedText" Color="#7A7A7A"/>
        <SolidColorBrush x:Key="Brush.Primary" Color="#007ACC"/>
        <SolidColorBrush x:Key="Brush.Primary.Hover" Color="#118DDD"/>
        <SolidColorBrush x:Key="Brush.Primary.Pressed" Color="#0B5FA5"/>

        <Geometry x:Key="Icon.FolderClosed">M2,7 L6,7 8,9 14,9 14,14 2,14 Z</Geometry>
        <Geometry x:Key="Icon.FolderOpen">M2,9 L6,9 8,11 14,11 12,14 2,14 Z</Geometry>
        <Geometry x:Key="Icon.File">M4,2 L11,2 13,4 13,16 4,16 Z M11,2 L13,4</Geometry>

        <ui:LevelToIndentConverter x:Key="LevelToIndentConverter" Indent="22"/>

        <Style x:Key="ToolbarButton" TargetType="Button">
            <Setter Property="Width" Value="26"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="{DynamicResource Brush.ButtonBg}"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.Text}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource Brush.ButtonBg.Hover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource Brush.ButtonBg.Pressed}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ToolbarButton}">
            <Setter Property="Background" Value="{DynamicResource Brush.Primary}"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding Background}"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource Brush.Primary.Hover}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource Brush.Primary.Hover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource Brush.Primary.Pressed}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource Brush.Primary.Pressed}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" TargetName="border" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IconToggleInline" TargetType="ToggleButton">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.Text}"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="Transparent" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TreeExpander" TargetType="ToggleButton">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.Text}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsDirectory}" Value="True"/>
                        <Condition Binding="{Binding HasAnyChildren}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Visibility" Value="Visible"/>
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>

        <ContextMenu x:Key="NodeContextMenu"
                     DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
            <MenuItem Command="{x:Static ui:RepoExplorerControl.NavigateToCommand}"
                      CommandParameter="{Binding}">
                <MenuItem.Header>
                    <TextBlock Text="Перейти"/>
                </MenuItem.Header>
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsDirectory}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </MenuItem.Style>
            </MenuItem>
            <MenuItem Command="{x:Static ui:RepoExplorerControl.ToggleIncludeCommand}"
                      CommandParameter="{Binding}">
                <MenuItem.Header>
                    <TextBlock>
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Скрыть"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsIncluded}" Value="False">
                                        <Setter Property="Text" Value="Показать"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </MenuItem.Header>
            </MenuItem>
        </ContextMenu>

        <Style TargetType="TreeViewItem">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="ContextMenu" Value="{StaticResource NodeContextMenu}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <Grid SnapsToDevicePixels="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border x:Name="HeaderBorder"
                                    Background="Transparent"
                                    Cursor="Hand"
                                    Padding="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem}, Converter={StaticResource LevelToIndentConverter}}">
                                <ContentPresenter ContentSource="Header"/>
                            </Border>
                            <ItemsPresenter x:Name="ItemsHost" Grid.Row="1"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="False">
                                <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="HeaderBorder" Property="Background" Value="{DynamicResource Brush.ItemSelected}"/>
                            </Trigger>
                            <Trigger SourceName="HeaderBorder" Property="IsMouseOver" Value="True">
                                <Setter TargetName="HeaderBorder" Property="Background" Value="{DynamicResource Brush.ItemHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <HierarchicalDataTemplate DataType="{x:Type ui:NodeVM}" ItemsSource="{Binding Children}">
            <Grid Height="22" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="22"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="ActionsCol"/>
                    <ColumnDefinition Width="6"/>
                </Grid.ColumnDefinitions>

                <ToggleButton Grid.Column="0" Style="{StaticResource TreeExpander}">
                    <ToggleButton.IsChecked>
                        <Binding RelativeSource="{RelativeSource AncestorType=TreeViewItem}" Path="IsExpanded" Mode="TwoWay"/>
                    </ToggleButton.IsChecked>
                    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="10" Text="&#xE76C;" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem}, Path=IsExpanded}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="10" Text="&#xE70D;" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem}, Path=IsExpanded}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </ToggleButton>

                <Path Grid.Column="1" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Path.Style>
                        <Style TargetType="Path">
                            <Setter Property="Data" Value="{StaticResource Icon.File}"/>
                            <Setter Property="Width" Value="12"/>
                            <Setter Property="Height" Value="16"/>
                            <Setter Property="Fill" Value="{DynamicResource Brush.Text}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDirectory}" Value="True">
                                    <Setter Property="Data" Value="{StaticResource Icon.FolderClosed}"/>
                                    <Setter Property="Width" Value="16"/>
                                    <Setter Property="Height" Value="16"/>
                                </DataTrigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding IsDirectory}" Value="True"/>
                                        <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem}, Path=IsExpanded}" Value="True"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Data" Value="{StaticResource Icon.FolderOpen}"/>
                                </MultiDataTrigger>
                                <DataTrigger Binding="{Binding IsIncluded}" Value="False">
                                    <Setter Property="Fill" Value="{DynamicResource Brush.ExcludedText}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Path.Style>
                </Path>

                <TextBlock Grid.Column="2"
                           Text="{Binding Name}"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0"
                           TextTrimming="CharacterEllipsis"
                           TextWrapping="NoWrap">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{DynamicResource Brush.Text}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsIncluded}" Value="False">
                                    <Setter Property="Foreground" Value="{DynamicResource Brush.ExcludedText}"/>
                                    <Setter Property="TextDecorations" Value="Strikethrough"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Hidden"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem}, Path=IsMouseOver}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem}, Path=IsSelected}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <ToggleButton Style="{StaticResource IconToggleInline}">
                        <ToggleButton.IsChecked>
                            <Binding Path="IsIncluded" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"/>
                        </ToggleButton.IsChecked>
                        <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="12" VerticalAlignment="Center" Foreground="#A9A9A9">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="&#xE890;"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsIncluded}" Value="False">
                                            <Setter Property="Text" Value="&#xE8F5;"/>
                                            <Setter Property="Foreground" Value="{DynamicResource Brush.ExcludedText}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ToggleButton}, Path=IsMouseOver}" Value="True">
                                            <Setter Property="Foreground" Value="#FFFFFF"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </ToggleButton>
                </StackPanel>
            </Grid>
        </HierarchicalDataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="6,6,6,4">
            <TextBlock VerticalAlignment="Center" Text="repotxt" FontSize="12" FontWeight="SemiBold"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                <Button x:Name="RefreshBtn" Style="{StaticResource ToolbarButton}" ToolTip="Refresh" Click="Refresh_Click">
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="13" Text="&#xE72C;"/>
                </Button>
                <Button Style="{StaticResource PrimaryButton}" ToolTip="Generate report" Click="Generate_Click">
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="13" Text="&#xE7C3;"/>
                </Button>
                <Button Style="{StaticResource ToolbarButton}" ToolTip="Reset rules" Click="Reset_Click">
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="13" Text="&#xE894;"/>
                </Button>
                <Button Style="{StaticResource ToolbarButton}" ToolTip="Reset to defaults" Click="Defaults_Click">
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="13" Text="&#xE777;"/>
                </Button>
                <ToggleButton x:Name="WrapToggle" Style="{StaticResource IconToggleInline}" ToolTip="Toggle wrap" Click="WrapToggle_Click">
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="13" Text="&#xE7C2;"/>
                </ToggleButton>
            </StackPanel>
        </DockPanel>

        <Border Grid.Row="1"
                Background="{DynamicResource Brush.NavBarBg}"
                Margin="6,0,6,4"
                Padding="6,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="BackBtn"
                        Style="{StaticResource ToolbarButton}"
                        Width="26"
                        Height="24"
                        ToolTip="Back"
                        Click="Back_Click">
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="13" Text="&#xE72B;"/>
                </Button>
                <TextBlock x:Name="CurrentPathText"
                           Grid.Column="1"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis"
                           TextWrapping="NoWrap"/>
            </Grid>
        </Border>

        <TreeView x:Name="Tree"
                  Grid.Row="2"
                  Grid.IsSharedSizeScope="True"
                  ItemsSource="{Binding RootNodes}"
                  BorderThickness="0"
                  Background="{DynamicResource Brush.PanelBg}"
                  VirtualizingStackPanel.IsVirtualizing="True"
                  VirtualizingStackPanel.VirtualizationMode="Recycling"
                  ScrollViewer.CanContentScroll="True"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
    </Grid>
</UserControl>