<UserControl x:Class="repotxt.UI.RepoExplorerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="clr-namespace:repotxt.UI"
             MinWidth="300" MinHeight="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="4">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                <Button Margin="2" Padding="6,2" Click="Refresh_Click">Refresh</Button>
                <Button Margin="2" Padding="6,2" Click="Generate_Click">Generate</Button>
                <Button Margin="2" Padding="6,2" Click="Reset_Click">Reset</Button>
            </StackPanel>
            <TextBlock VerticalAlignment="Center" Text="Explorer" FontWeight="SemiBold"/>
        </DockPanel>

        <TreeView Grid.Row="1" ItemsSource="{Binding RootNodes}">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type ui:NodeVM}" ItemsSource="{Binding Children}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{Binding Icon}" Margin="2" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding Name}" Margin="4,0" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Opacity" Value="1"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsIncluded}" Value="False">
                                            <Setter Property="Opacity" Value="0.5"/>
                                            <Setter Property="TextDecorations" Value="Strikethrough"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <CheckBox Grid.Column="2" Margin="6,0" VerticalAlignment="Center"
                                  IsChecked="{Binding IsIncluded, Mode=TwoWay}"
                                  Content="Include"/>
                    </Grid>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>
    </Grid>
</UserControl>