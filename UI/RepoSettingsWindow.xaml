<Window x:Class="repotxt.UI.RepoSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="repotxt settings"
        Width="600"
        Height="500"
        MinWidth="520"
        MinHeight="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#1E1E1E"
        Foreground="#D0D0D0">
    <Window.Resources>
        <SolidColorBrush x:Key="Brush.PanelBg" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="Brush.Text" Color="#D0D0D0"/>
        <SolidColorBrush x:Key="Brush.ControlBg" Color="#252526"/>
        <SolidColorBrush x:Key="Brush.Border" Color="#3F3F46"/>
        <SolidColorBrush x:Key="Brush.ButtonBg" Color="#2D2D30"/>
        <SolidColorBrush x:Key="Brush.ButtonBg.Hover" Color="#3E3E42"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource Brush.ControlBg}"/>
            <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource Brush.ButtonBg}"/>
            <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource Brush.ButtonBg.Hover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <CheckBox x:Name="RespectGitIgnoreCheckBox"
                  Grid.Row="0"
                  Content="Respect .gitignore"
                  Margin="0,0,0,8"/>

        <TextBlock Grid.Row="1"
                   Text="Hidden directories (never shown in the tree; matched by folder name):"
                   Margin="0,0,0,4"
                   TextWrapping="Wrap"/>

        <TextBox x:Name="HiddenDirsTextBox"
                 Grid.Row="2"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 Margin="0,0,0,8"
                 MinHeight="60"/>

        <TextBlock Grid.Row="3"
                   Text="Hidden files (never shown in the tree; glob patterns matched by file name):"
                   Margin="0,0,0,4"
                   TextWrapping="Wrap"/>

        <TextBox x:Name="HiddenFilesTextBox"
                 Grid.Row="4"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 Margin="0,0,0,8"
                 MinHeight="60"/>

        <TextBlock Grid.Row="5"
                   Text="Auto-excluded directories (visible only if manually included):"
                   Margin="0,0,0,4"
                   TextWrapping="Wrap"/>

        <TextBox x:Name="AutoDirsTextBox"
                 Grid.Row="6"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 Margin="0,0,0,8"
                 MinHeight="60"/>

        <TextBlock Grid.Row="7"
                   Text="Auto-excluded files (visible only if manually included; glob patterns):"
                   Margin="0,0,0,4"
                   TextWrapping="Wrap"/>

        <TextBox x:Name="AutoFilesTextBox"
                 Grid.Row="8"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 Margin="0,0,0,8"
                 MinHeight="60"/>

        <StackPanel Grid.Row="9"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,8,0,0">
            <Button IsDefault="True"
                    Click="Ok_Click">OK</Button>
            <Button IsCancel="True"
                    Click="Cancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>